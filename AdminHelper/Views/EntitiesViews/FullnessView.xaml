<UserControl x:Class="AdminHelper.Views.EntitiesViews.FullnessView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataGrid ItemsSource="{Binding Entities}"
              Style="{StaticResource DefaultDataGridStyle}"
              CanUserAddRows="False"
              CanUserDeleteRows="False">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Id}" Header="Id" Visibility="Hidden"/>
            <DataGridTextColumn Binding="{Binding FullnessName}" Header="Наполненность" IsReadOnly="True" Width="*"/>
            <DataGridTextColumn Binding="{Binding Allowance}" Header="Надбавка"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
